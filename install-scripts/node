#!/usr/bin/env bash
set -e

if [ ! -d $HOME/.nvm ]; then
  echo -e "\nInstalling nvmâ€¦"
  wget -qO- https://raw.githubusercontent.com/nvm-sh/nvm/v0.39.1/install.sh | bash
fi

if test ! $(which node); then
  nvm install --lts
  nvm use --lts
fi

if test ! $(which eslint_d); then
  npm i -g eslint_d
fi
