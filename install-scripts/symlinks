#!/usr/bin/env bash
set -e

linkables=(
	config/bat/config
	config/lvim/config.lua
	config/nvim
	gitconfig
	tmux.conf
	zshrc
)

echo -e "\nCreating symlinksâ€¦"
for path in "${linkables[@]}"; do
	source="$PWD/$path"
	target="$HOME/.$path"
	targetdir=$(dirname $target)

	if [ ! -d $targetdir ]; then
		mkdir -p $targetdir
	fi

	if [ -e $target ]; then
		echo "~${target#$HOME} exists, skipping."
	else
		ln -s $source $target
		echo "~${target#$HOME} created."
	fi
done
