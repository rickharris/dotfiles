#!/usr/bin/env bash

linkables=(
  ackrc
  atom/config.cson
  atom/packages_list
  config/nvim/init.vim
  gemrc
  gitconfig
  hyper.js
  tmux.conf
  tmuxinator
  zshrc
)

echo -e "\nCreating symlinks..."
for path in "${linkables[@]}"; do
  source="$PWD/$path"
  target="$HOME/.$path"
  targetdir=$(dirname $target)

  if [ ! -d $targetdir ]; then
    mkdir -p $targetdir
  fi

  if [ -e $target ]; then
    echo "~${target#$HOME} exists, skipping."
  else
    echo "~${target#$HOME} created."
    ln -s $source $target
  fi
done
